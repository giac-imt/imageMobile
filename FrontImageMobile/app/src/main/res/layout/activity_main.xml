<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/prendre_photo"
        android:layout_width="226dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:text="@string/main_activity_btn_prendre_photo"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/importer_photo"
        android:layout_width="226dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:text="@string/main_activity_btn_importer_photo"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/importer_zip"
        android:layout_width="226dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:text="@string/main_activity_btn_importer_zip"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/indexer"
        android:layout_width="226dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/main_activity_btn_indexer"
        android:layout_gravity="center"/>

    <ProgressBar
        android:id="@+id/main_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

</android.support.v7.widget.LinearLayoutCompat>